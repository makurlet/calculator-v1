def add(x,y):
    return x + y
    
def subtract(x,y):
    return x - y
    
def multiply(x,y):
    return x * y
    
def divide(x,y):
    if y == 0:
        print("Error, cannot divide by zero")
        
    else:
        return x / y
    
    
